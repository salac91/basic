<%= form_for [ @user, @article ] do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

   <%= f.submit "Generate topic", class: 'btn btn-primary' %>

<% end %>